@{
    ViewData["Title"] = "Transfer Funds";
}

<h1>Transfer Funds</h1>

<div class="alert alert-info">
    <p class="mb-0"><strong>From Account:</strong> @ViewData["SourceAccountNumber"]</p>
    <p class="mb-0"><strong>Current Balance:</strong> @ViewData["SourceAccountBalance"]</p>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateTransfer" method="post">
            @* Display any model-level errors at the top *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* This hidden field is crucial. It posts the sourceAccountId back to the controller. *@
            <input type="hidden" name="sourceAccountId" value="@ViewData["SourceAccountId"]" />

            <div class="form-group">
                <label for="destinationAccountNumber" class="control-label">Destination Account Number</label>
                <input name="destinationAccountNumber" class="form-control" placeholder="Enter 12-digit account number" value="@ViewData["EnteredDestinationAccount"]" />
                @Html.ValidationMessage("DestinationAccountNumber", "", new { @class = "text-danger" })
            </div>

            <div class="form-group mt-2">
                <label for="amount" class="control-label">Amount</label>
                <input name="amount" type="number" step="0.01" class="form-control" value="@ViewData["EnteredAmount"]" />
                @Html.ValidationMessage("Amount", "", new { @class = "text-danger" })
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Complete Transfer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Customers" asp-action="Details" asp-route-id="@ViewData["CustomerId"]">Back to Customer Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}